- if post.important
  %p.date
    = post.created_at.to_s(:datetime)
  = link_to post_important_destroy_path(post.id),class: "main__background__post__right_content__icon", method: :delete, remote: true do
    %i.fas.fa-star
  = link_to theme_post_path(post.theme_id, post.id), class: "main__background__post__right_content__icon", method: :delete, remote: true do
    %i.fas.fa-trash{ id: "fas.fa-trash#{post.id}" }
- else
  %p.date
    = post.created_at.to_s(:datetime)
  = link_to post_important_path(post.id),class: "main__background__post__right_content__icon", remote: true do
    %i.far.fa-star
  = link_to theme_post_path(post.theme_id, post.id), class: "main__background__post__right_content__icon", method: :delete, remote: true do
    %i.fas.fa-trash-alt
  
