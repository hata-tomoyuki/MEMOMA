.header
  = render "themes/header"
  
.main
  .main__background
    .main__background__box
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :nickname
        .field-input
          = f.text_field :nickname, class: 'text', autofocus: true, autocomplete: "nickname"
        .field
          = f.label :email
        .field-input
          = f.email_field :email, class: 'text', autofocus: true, autocomplete: "email"
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
        .field-input
          = f.password_field :password, class: 'text', autocomplete: "new-password"
        .field
          = f.label :password_confirmation
        .field-input
          = f.password_field :password_confirmation, class: 'text', autocomplete: "new-password"
        .actions
          = f.submit "Sign up", class: "btn"
      = render "devise/shared/links"
