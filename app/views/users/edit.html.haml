.header
  = render "themes/header"

.main_fixed
  .main_fixed__background
    .main_fixed__background__formats
      %p アカウントの編集
    .user_edit_form
      = form_for(current_user) do |f|
        .user_edit_form__field
          .user_edit_form__field--label
            = f.label :nickname
          .user_edit_form__field--input
            = f.text_field :nickname, class: 'text', autofocus: true
        .user_edit_form__field
          .user_edit_form__field--label
            = f.label :email
          .user_edit_form__field--input
            = f.email_field :email, class: 'text'
        .actions
          = f.submit "Update", class: 'user_edit_button'
