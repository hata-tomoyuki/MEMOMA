.header
  = render "themes/header"
  .header__menu
    - if user_signed_in?
      .header__menu__btn
        = current_user.nickname
      .header__menu__btn
        = link_to destroy_user_session_path, class: "header__menu__btn--link", method: :delete do
          ログアウト
    - else
      .header__menu__btn
        = link_to new_user_session_path, class: "header__menu__btn--link" do
          ログイン
      .header__menu__btn
        = link_to new_user_registration_path, class: "header__menu__btn--link" do
          新規登録
  
.main
  .main__background
    .main__background__formats
      .main__background__formats__title
        = @theme.title
      %p タイトル名の変更

      .edit_form
        = form_for @theme do |f|
          .edit_form__field
            = f.text_field :title, class: 'text', placeholder: ' Enter theme'
          = f.submit 'Change', class: 'edit_button'