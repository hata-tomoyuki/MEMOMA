.header
  .header__title
    = link_to root_path, class: "header__title--btn" do
      ??NazeNaze??
  .header__menu
    - if user_signed_in?
      .header__menu__btn
        = current_user.nickname
      .header__menu__btn
        = link_to destroy_user_session_path, class: "header__menu__btn--link", method: :delete do
          ログアウト
    - else
      .header__menu__btn
        = link_to new_user_session_path, class: "header__menu__btn--link" do
          ログイン
      .header__menu__btn
        = link_to new_user_registration_path, class: "header__menu__btn--link" do
          新規登録

.main
  .main__background
    .main__background__char
      テーマ一覧
    - @themes.each do |theme|
      .main__background__theme
        .main__background__theme__left_content
          = link_to theme_path(theme.id), class: "main__background__theme__left_content--title" do
            = theme.title
          .main__background__theme__left_content--count
            なぜなぜカウント：
            = theme.posts.length
        .main__background__theme__right_content
          %p.title
            = theme.created_at.to_s(:datetime)
          .main__background__theme__right_content__icons
            = link_to theme_path(theme.id), class: "main__background__theme__right_content__icons--icon", method: :delete do
              %i.fas.fa-cog
            = link_to theme_path(theme.id), class: "main__background__theme__right_content__icons--icon", method: :delete do
              %i.fas.fa-trash


  .form
    = form_for @theme do |f|
      .form__theme
        = f.text_field :title, class: 'text', placeholder: ' Enter theme'
        = f.submit 'Go', class: 'button'



