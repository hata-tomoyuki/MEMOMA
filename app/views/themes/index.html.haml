.header
  .header__title
    = link_to root_path do
      ??NazeNaze??
  .header__menu
    - if user_signed_in?
      .header__menu__nickname
        = current_user.nickname
      .header__menu__create
        = link_to destroy_user_session_path, method: :delete do
          ログアウト
    - else
      .header__menu__user
        = link_to new_user_session_path do
          ログイン
      .header__menu__create
        = link_to new_user_registration_path do
          新規登録

.main
  .main__themes
    .main__themes__char
      %p -- テーマ一覧 --
    - @themes.each do |theme|
      .main__themes__theme
        .main__themes__theme__left_content
          %p.title
            = link_to theme_path(theme.id) do
              = theme.title
          %p.count
            なぜなぜカウント：
            = theme.posts.length
        .main__themes__theme__right_content
          %p.title
            = theme.created_at
          .main__themes__theme__right_content__icons
            .main__themes__theme__right_content__icons__edit
              = link_to theme_path(theme.id), method: :delete do
                %i.fas.fa-cog
            .main__themes__theme__right_content__icons__delete
              = link_to theme_path(theme.id), method: :delete do
                %i.fas.fa-trash


  .form
    = form_for @theme do |f|
      .form__theme
        = f.text_field :title, class: 'text', placeholder: ' Enter theme'
        = f.submit 'Go', class: 'button'



